<MyButton@Button>
    size_hint: (0.25, 0.2)
    font_size: 32

<MyDarkButton@MyButton>
    background_color: (0.7, 0.7, 0.7, 1)

<MyLayout>

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 60
            size_hint: (1, 0.18)

        GridLayout:
            cols: 4
            rows: 5

            # Row1
            MyButton:
                text: "%"

            MyButton:
                text: "C"
                on_press: root.clear()

            MyButton:
                text: "\u00AB"
                on_press: root.remove()

            MyButton:
                text: "/"
                on_press: root.math_sign("/")

            # Row2
            MyDarkButton:
                text: "7"
                on_press: root.number_button(7)

            MyDarkButton:
                text: "8"
                on_press: root.number_button(8)

            MyDarkButton:
                text: "9"
                on_press: root.number_button(9)

            MyButton:
                text: "x"
                on_press: root.math_sign("x")

            # Row3
            MyDarkButton:
                text: "4"
                on_press: root.number_button(4)

            MyDarkButton:
                text: "5"
                on_press: root.number_button(5)

            MyDarkButton:
                text: "6"
                on_press: root.number_button(6)

            MyButton:
                text: "-"
                on_press: root.math_sign("-")

            # Row4
            MyDarkButton:
                text: "1"
                on_press: root.number_button(1)

            MyDarkButton:
                text: "2"
                on_press: root.number_button(2)

            MyDarkButton:
                text: "3"
                on_press: root.number_button(3)

            MyButton:
                text: "+"
                on_press: root.math_sign("+")

            # Row5
            MyDarkButton:
                text: "+/-"
                on_press: root.pos_neg()

            MyDarkButton:
                text: "0"
                on_press: root.number_button(0)

            MyDarkButton:
                text: "."
                on_press: root.dot()

            MyButton:
                text: "="
                background_normal: ''
                background_color: (173/255, 216/255, 230/255, 0.6)
                on_press: root.equals()

